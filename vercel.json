{
    "version": 1,
    "builds": [
      {
        "src": "./src/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "./views/index.hbs",  
        "use": "@vercel/static"
      }
    ],
  
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "./src/index.js"
      }
    ]
  }